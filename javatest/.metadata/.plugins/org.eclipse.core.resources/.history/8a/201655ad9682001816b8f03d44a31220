package cn.itcast.schema;

public class Demo1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
/*print
 			3   7
 		   2 4 6 8
 	 	  1   5   9
 */
		int a[][] = new int[3][9];
		int x=2;
		int y=0;
		
		boolean flag = false;
		for(int j=1;j<=9;j++) {
			a[x][y]=j;
			y++;
			
			if(flag==false) {
				x--;
			}
			else {
				x++;
			}
			if(x<0) {
				x = x+2;
				flag = true;
			}
			
			if(x>2) {
				flag = false;
				x = x-2;
			}
				
		}
		for(int i=0;i<a.length;i++) {
			for(int j=0;j<a[i].length;j++) {
				if(a[i][j]==0&j<10) {
					System.out.print(" ");
				}
				if(a[i][j]==0&j>=10) {
					System.out.print("  ");
				}
				System.out.print(a[i][j]);
			}
		System.out.println();
		}
	}

}
